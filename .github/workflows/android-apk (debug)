name: android-apk (debug)

on:
  push:
    branches: [ "dguo" ]
  pull_request:
    branches: [ "dguo" ]

concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

permissions:
  contents: read

env:
  JAVA_VERSION: "17"
  ANDROID_API_LEVEL: "34"
  ANDROID_BUILD_TOOLS: "34.0.0"
  # 如果你的 Android 模块不是在仓库根目录（比如 app/ 目录），
  # 修改为你的模块路径，如 ANDROID_PROJECT_DIR: "android-app"
  ANDROID_PROJECT_DIR: "./project"

jobs:
  build-apk-debug:
    name: Build Debug APK
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Java
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: ${{ env.JAVA_VERSION }}

      - name: Setup Gradle (cache)
        uses: gradle/actions/setup-gradle@v3

      - name: Setup Android SDK
        uses: android-actions/setup-android@v3
        with:
          api-level: ${{ env.ANDROID_API_LEVEL }}
          build-tools: ${{ env.ANDROID_BUILD_TOOLS }}
          # 如果需要 NDK 可加: ndk: "26.1.10909125"

      - name: Grant execute permission for gradlew
        working-directory: ${{ env.ANDROID_PROJECT_DIR }}
        run: chmod +x ./gradlew

      - name: Build Debug APK
        working-directory: ${{ env.ANDROID_PROJECT_DIR }}
        run: ./gradlew --no-daemon clean assembleDebug

      - name: Locate APK(s)
        id: locate
        shell: bash
        working-directory: ${{ env.ANDROID_PROJECT_DIR }}
        run: |
          set -e
          # 常见路径：**/build/outputs/apk/debug/*.apk
          APK_FILES=$(ls -1 **/build/outputs/apk/debug/*.apk 2>/dev/null || true)
          if [ -z "$APK_FILES" ]; then
            echo "未找到 Debug APK，请确认模块名与构建任务是否正确。" >&2
            exit 1
          fi
          echo "$APK_FILES" | sed 's/^/Found: /'
          # 输出到动作变量，供后续 steps 使用
          # 将换行替换为空格，便于 upload-artifact 的多路径输入
          echo "apk_list=$(echo "$APK_FILES" | tr '\n' ' ')" >> "$GITHUB_OUTPUT"

      - name: Upload Debug APK artifact
        uses: actions/upload-artifact@v4
        with:
          name: debug-apk-${{ github.run_number }}-${{ github.sha }}
          path: ${{ steps.locate.outputs.apk_list }}
          if-no-files-found: error
